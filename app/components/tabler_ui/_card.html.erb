<%
  # Card size (md, lg)
  size_class = card.respond_to?(:size) && card.size.present? ? "card-#{card.size}" : ''

  # Additional classes
  additional_classes = card.respond_to?(:class) ? card.class : ''

  # Build CSS classes
  css_classes = [
    'card',
    size_class,
    additional_classes
  ].compact.join(' ')

  # Card title
  title = card.respond_to?(:title) ? card.title : nil
%>

<div class="<%= css_classes %>">
  <% if title.present? || (defined?(slots) && slots.header.present?) %>
    <div class="card-header">
      <% if defined?(slots) && slots.header.present? %>
        <%= slots.header %>
      <% elsif title.present? %>
        <h3 class="card-title"><%= title %></h3>
      <% end %>
    </div>
  <% end %>

  <% if defined?(slots) && slots.body.present? %>
    <div class="card-body">
      <%= slots.body %>
    </div>
  <% end %>

  <% if defined?(slots) && slots.footer.present? %>
    <div class="card-footer">
      <%= slots.footer %>
    </div>
  <% end %>
</div>
